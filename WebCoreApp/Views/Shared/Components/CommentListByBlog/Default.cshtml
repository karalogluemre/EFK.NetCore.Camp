@model IEnumerable<EntityLayer.Concrete.Comment>
<div class="comment-top">
    <h4>Comments</h4>
    @foreach (var item in Model)
    {
       <div class="media">
        <img src="~/web/~/web/images/" alt="" class="img-fluid" />
        <div class="media-body">
            <h5 class="mt-0">@item.UserName</h5>
            <p>
               @item.Content
            </p>
        </div>
    </div> 
    }
    
</div>